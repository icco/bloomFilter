<!DOCTYPE html>
<html>
   <head>
      <title>Bloomflower</title>
      <%= stylesheet_link_tag :all %>
      <%= javascript_include_tag :defaults %>
      <%= csrf_meta_tag %>
   </head>
   <body>
      <div id="main">
         <div class="menu">
            <h1>BloomFilter</h1>
            <ul>
               <li><%= link_to_unless_current 'home', root_url %></li>
               <li><%= link_to_unless_current 'new', items_path %></li>
               <li><%= link_to_unless_current 'users', users_path %></li>
               <%= render 'devise/menu/login_items' %>
               <%= render 'devise/menu/registration_items' %>
            </ul>
         </div>

         <p id="notice"><%= notice %></p>

         <%= yield %>
      </div>
   </body>
</html>
